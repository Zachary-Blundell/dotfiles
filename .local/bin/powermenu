#!/usr/bin/env bash

op=$(echo -e " Poweroff\n Reboot\n Hibernate\n󰒲 Suspend\n Lock\n Logout" | wofi -i --dmenu -H 300 -W 100 --style=/home/zaiquiri/.local/bin/style.css | awk '{print tolower($2)}')

case $op in
poweroff) ;&
reboot) ;&
hibernate) ;&
suspend)
  systemctl $op
  ;;
lock)
  swaylock
  ;;
logout)
  swaymsg exit
  ;;
esac
